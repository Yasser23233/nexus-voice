{
  "name": "nexus-voice",
  "version": "1.0.0",
  "description": "Nexus Voice is a lightweight WebRTC group voice chat application built with Node.js, Express and Socket.IO.",
  "main": "server/index.js",
  "scripts": {
    "start": "bash scripts/start.sh",
    "server": "node server/index.js",
    "dev": "nodemon server/index.js",
    "tunnel": "ngrok http $PORT --log=stdout",
    "load-test": "node test/loadTest.js",
    "env-check": "node scripts/checkEnv.js"
  },
  "keywords": [
    "webrtc",
    "voice",
    "chat",
    "nodejs",
    "socket.io"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.1",
    "express": "^4.19.0",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "nodemon": "^3.0.2",
    "puppeteer": "^24.15.0"
  },
  "engines": {
    "node": ">=20"
  }
}
